<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.longzhuo.login.dao.UserDao">

    <select id="selectUser" resultType="User" parameterType="com.longzhuo.login.entity.User">
        SELECT * FROM bauser WHERE uid = #{uid}
    </select>

    <select id="loginUser" resultType="User">
        SELECT * FROM bauser WHERE nick = #{0} AND head = #{1} AND sex = #{2}
    </select>

    <insert id="insertUser" parameterType="com.longzhuo.login.entity.User">
        insert into bauser (`nick`,`head`,`sex`,`gold`,`material`,`diamond`,`customs`,`logTime`,`regTime`,`inviterUid`)
        values(#{nick},#{head},#{sex},0,0,0,0,#{logTime},#{regTime},#{inviterUid})
    </insert>

    <insert id="insertOpen" parameterType="com.longzhuo.login.entity.Open">
        insert into baopen (`uid`,`openid`)
        values(#{uid},#{openid})
    </insert>

    <insert id="insertPhysical" parameterType="com.longzhuo.login.entity.Physical">
        insert into baphysical (`uid`,`physical`,`bigTime`)
        values(#{uid},#{physical},#{bigTime})
    </insert>

    <select id="selectUserByNick" resultType="long">
        select uid from bauser
        where nick = #{0} and head = #{1} and sex = #{2}
    </select>

    <update id="timestamp">
        update bauser set logTime = #{logTime,jdbcType=BIGINT} where uid = #{uid,jdbcType=BIGINT};
    </update>
</mapper>